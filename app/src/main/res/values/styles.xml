<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color3399FF</item>
        <item name="colorPrimaryDark">@color/color3366FF</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Line">
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorCCCCCC</item>
    </style>
    <style name="TextItemStyle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BezierPointLabel">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color666666</item>
    </style>
    <style name="AxisXSeekBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">60000</item>
        <item name="android:progress">30000</item>
    </style>
    <style name="AxisYSeekBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">100</item>
        <item name="android:progress">50</item>
    </style>

    <style name="style_simple_button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@drawable/shape_subject_stroke_app</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
