<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View android:id="@+id/v_blue_behavior"
          android:layout_width="100dp"
          android:layout_margin="10dp"
          app:layout_behavior="engineer.echo.study.ui.behavior.CompanionBehavior"
          android:background="@color/color0099FF"
          android:layout_height="100dp"/>

    <View android:id="@+id/v_green_behavior"
          android:layout_width="100dp"
          android:layout_margin="20dp"
          android:clickable="true"
          android:background="@color/color00FF99"
          android:layout_height="100dp"
          android:focusable="true"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>