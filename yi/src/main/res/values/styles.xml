<resources>

    <style name="item_temperature_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">70sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/song</item>
        <item name="layout_constraintVertical_bias">0.2</item>
    </style>

    <style name="item_degree_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/song</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintCircleAngle">55</item>
        <item name="layout_constraintCircleRadius">55dp</item>
    </style>

    <style name="item_weather_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintCircleAngle">225</item>
        <item name="layout_constraintCircleRadius">85dp</item>
    </style>

    <style name="item_temperature_range_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintCircleAngle">135</item>
        <item name="layout_constraintCircleRadius">85dp</item>
    </style>

    <style name="item_blur_bg_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/shape_round_weather</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="layout_constraintCircleAngle">180</item>
        <item name="layout_constraintCircleRadius">125dp</item>
        <item name="layout_constraintWidth_percent">0.55</item>
    </style>

    <style name="item_blur_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="item_weather_index_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

</resources>
