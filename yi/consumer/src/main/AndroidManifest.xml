<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="engineer.echo.yi.consumer">

    <application
            android:name=".ConsumerApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/consumer_app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/CommonEasyAppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="${MODULE_ACTION}" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.friends.FriendsActivity"
                android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
                android:screenOrientation="portrait"
                android:theme="@style/CommonNoActionBarTheme" />
    </application>
</manifest>

